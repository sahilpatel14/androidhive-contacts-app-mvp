<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:background="?attr/selectableItemBackground"
    android:layout_height="?attr/listPreferredItemHeight">

    <info.androidhive.phonebook.common.RoundedImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_item_contact_pic"
        tools:src="@drawable/ic_account_circle_black_24dp"
        android:layout_width="56dp"
        android:layout_height="56dp" />

    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@id/iv_item_contact_pic"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_item_contact_name"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
            tools:text="Sherlock Holmes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_item_contact_region"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Great Britain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>



</RelativeLayout>